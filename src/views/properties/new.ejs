<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../static/partials/headdash.ejs %>
    </head>
    <body>
        <% include ../static/partials/navdash.ejs %>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-2 d-none d-md-block bg-light sidebar">
                    <% include ../static/partials/sidebar.ejs %>
                </div>
                <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
                    <% include ../static/partials/messages.ejs %>
                    <div class="col-lg-6 offset-lg-3">
                        <div class="card mt-3">
                            <h2 class="card-header text-center">Add Property</h2>
                            <div class="card-body">
                                <p class="text-center">Please enter your property details for your device.</p>
                                <form action="/properties/create" method="POST" class="col-lg-10 offset-lg-1">
                                    <div class="form-group">
                                        <label for="address">Address</label>
                                        <input type="address" class="form-control" name="address" aria-describedby="addressHelp" placeholder="Enter street address">
                                        <small class="text-muted" id="addressHelp">enter street address</small>
                                        <input type="address2" class="form-control" name="address2" aria-describedby="address2Help" placeholder="Enter 2nd line of street address">
                                        <small class="text-muted" id="address2Help">second street address line</small>
                                    </div>
                                    <div class="form-group">
                                        <label for="city">City</label>
                                        <input type="city" class="form-control" name="city" aria-describedby="cityHelp" placeholder="Enter city">
                                        <small class="text-muted" id="cityHelp">enter city</small>
                                    </div>
                                    <div class="form-group">
                                        <label for="state">State</label>
                                        <input type="state" class="form-control" name="state" aria-describedby="stateHelp" placeholder="Enter state">
                                        <small class="text-muted" id="stateHelp">enter state</small>
                                    </div>
                                    <div class="form-group">
                                        <label for="zip">Zip Code</label>
                                        <input type="zip" class="form-control" name="zip" aria-describedby="zipHelp" placeholder="Enter zip code">
                                        <small class="text-muted" id="zipHelp">enter zip code</small>
                                    </div>
                                    <div class="text-center"><button type="submit" class="btn btn-primary">Submit</button></div>
                                </form>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
        </div>

        <% include ../static/partials/baseScripts.ejs %>
    </body>
</html>