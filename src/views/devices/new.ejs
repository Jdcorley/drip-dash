<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../static/partials/headdash.ejs %>
    </head>
    <body>
        <% include ../static/partials/navdash.ejs %>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-2 d-none d-md-block bg-light sidebar">
                    <% include ../static/partials/sidebar.ejs %>
                </div>
                <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
                    <% include ../static/partials/messages.ejs %>
                    <div class="col-lg-6 offset-lg-3">
                        <div class="card mt-3">
                            <h2 class="card-header text-center">Device Registration</h2>
                            <div class="card-body">
                                <p class="text-center">Please enter your device id to get started.</p>
                                <form action="/devices/claim" method="POST" class="col-lg-10 offset-lg-1">
                                    <div class="form-group">
                                        <label for="deviceId">Device ID</label>
                                        <input type="text" class="form-control" name="deviceId" aria-describedby="deviceIdHelp" placeholder="Enter device id">
                                        <small class="text-muted" id="deviceIdHelp">device id is located on the back of the hub</small>
                                    </div>
                                    <div class="text-center"><button type="submit" class="btn btn-primary">Claim</button></div>
                                </form>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
        </div>

        <% include ../static/partials/baseScripts.ejs %>
    </body>
</html>